name: CI
on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  build_test:
    runs-on: ubuntu-latest

    {{#if matrix.python_versions}}
    strategy:
      matrix:
        python: [
          {{#each matrix.python_versions}}
          "{{this}}"{{#unless @last}}, {{/unless}}
          {{/each}}
        ]
    {{/if}}

    steps:
      - uses: actions/checkout@v4

      {{> gha/setup-python this}}
      {{> gha/pip-install this}}

      {{!-- Lint step --}}
      - name: Lint
        run: |
          if command -v flake8 >/dev/null 2>&1; then
            flake8 . || echo "Lint warnings found"
          else
            echo "flake8 not installed — skipping lint"
          fi

      {{!-- Test step --}}
      - name: Test
        run: |
          export PYTHONPATH=$PWD
          if [ -d "tests" ]; then
            pytest || echo "Tests failed or missing — continuing"
          else
            echo "No tests/ directory found — skipping tests"
          fi

      {{!-- Build step --}}
      - name: Build
        run: |
          if [ -f "pyproject.toml" ]; then
            python -m pip install build || echo "build module missing"
            python -m build || echo "Build failed"
          elif [ -f "setup.py" ]; then
            python setup.py sdist || echo "setup.py build failed"
          else
            echo "No build system detected — skipping build"
          fi

      {{!-- Artifact upload --}}
      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: build
          path: dist/
        continue-on-error: true
