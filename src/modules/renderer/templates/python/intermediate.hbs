name: CI
on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  build_test:
    runs-on: ubuntu-latest

    {{#if matrix.python_versions}}
    strategy:
      matrix:
        python: [
          {{#each matrix.python_versions}}
          "{{this}}"{{#unless @last}}, {{/unless}}
          {{/each}}
        ]
    {{/if}}

    steps:
      - uses: actions/checkout@v4

      {{> gha/setup-python this}}
      {{> gha/pip-install this}}

      - name: Lint
        run: |
          if command -v flake8 >/dev/null 2>&1; then
            flake8 . || echo "Lint warnings"
          else
            echo "flake8 not installed — skipping lint"
          fi

      - name: Test
        run: |
          export PYTHONPATH=$PWD
          if [ -d "tests" ]; then
            pytest || echo "Tests failed or missing"
          else
            echo "tests/ not found — skipping tests"
          fi

      - name: Build
        run: |
          if [ -f "pyproject.toml" ]; then
            python -m pip install build || echo "build module missing"
            python -m build || echo "Build failed"
          elif [ -f "setup.py" ]; then
            python setup.py sdist || echo "setup.py build failed"
          else
            echo "No build system detected — skipping"
          fi

      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: build
          path: dist/
        continue-on-error: true


  {{#if container.enabled}}
  docker_build:
    runs-on: ubuntu-latest
    needs: build_test
    permissions:
      contents: read
      {{#if (eq container.registry "ghcr.io")}}packages: write{{/if}}
      id-token: write
    steps:
      - uses: actions/checkout@v4

      {{> gha/docker-login this}}
      {{> gha/docker-meta this}}
      {{> gha/docker-build-push this}}
  {{/if}}
